    </li>
    <li>
      <%= link_to "#" do %>
        <i class="fa fa-users">  Tìm phòng đấu</i>
      <% end %>
    </li>
    <li>
      <%= link_to "#" do %>
        <i class="fa fa-graduation-cap">   Bảng xếp hạng</i>
      <% end %>
    </li>
    <li>
      <%= link_to "#" do %>
        <i class="fa fa-clock-o">   Lịch sử thi đấu</i>
      <% end %>
    </li>
    <li>
      <%= link_to "#" do %>
        <i class="fa fa-book">   Hướng dẫn</i>
